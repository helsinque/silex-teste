<!DOCTYPE html>
<html>
    <head>
        <title>Lótus</title>
        <link href="{{ app.request.basepath }}/css/bootstrap.css" rel="stylesheet" type="text/css" />
        <link href="{{ app.request.basepath }}/css/custom.css" rel="stylesheet" type="text/css" />
        <link href="{{ app.request.basepath }}/css/font-awesome.min.css" rel="stylesheet">
        
    </head>
    <body>
        
        {% set active = active|default(null) %}
        <div class="navbar navbar-inverse" role="navigation">
            <div class="container">
                <div class="navbar-header">
                     <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        
                      </button>   
                    <a class="navbar-brand" href="">{{ 'Lótus' }}</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        {% for item in app.security.token.user.itensMenu %}

                            {% if item.childrens  %}
                               <li class="dropdown {% if item.nomeModulo == active %}active{% endif %}" >
                                <a id="drop{{item.idMenu}}" href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">{{ item.nomeMenu }}<b class="caret"></b></a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="drop{{item.idMenu}}">
                               {% for child in item.childrens %}
                                 <li role="presentation" >

                                   <a role="menuitem" tabindex="-1" href="{{ child.defaultPath }}">{{ child.nomeMenu }}</a>
                                 </li>
                                {% endfor %}
                            </ul>
                            </li>
                            {% else %}

                             <li {% if item.nomeModulo == active %}class="active"{% endif %}>
                               <a href="">{{ item.nomeMenu }}</a>
                             </li>
                            {% endif %}
                        {% endfor %}
                    
                       
                    </ul>
                    <ul class="nav navbar-nav pull-right">
                      <li><a href="{{ path('logout') }}"><span class="glyphicon glyphicon-off"></span> Sair</a></li>

                    </ul>
                </div><!--/.nav-collapse -->
                
            </div>
        </div>
    
         <div class="container">
            <div id="main" class="starter-template">
                {% set alertTypeAvaillable = [ 'info', 'success', 'warning', 'error'] %}
                {% for alert in alertTypeAvaillable %}
                   
                {% endfor %}
                {% block content %}
                {% endblock %}
            </div>
        </div>
       
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
        <script src="{{ app.request.basepath }}/js/bootstrap/bootstrap.min.js"></script>
        <script src="{{ app.request.basepath }}/js/validate/jquery.mask.js"></script>
        <script src="{{ app.request.basepath }}/js/validate/jquery.price_format.1.6.js"></script>
                <script src="{{ app.request.basepath }}/js/funcoes.js"></script>

        {% block javascripts %}{% endblock %}
    </body>
</html>